<div class="position-relative mx-5 mt-3">
  <div class="card-category card-large border" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))) %>)">
    <h1><%= @list.name %></h1>
  </div>
  <span class="movie-tag border"><%= pluralize(@list.movies.size, "movie") %></span>
</div>
<div class="container mb-5 border">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block border"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
    <div>
      <%= link_to "Go to My lists", lists_path, class: "btn btn-cancel"%>
      <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-cancel"%>
    </div>
  </div>

  <div class="row my-2">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= movie.title %></strong>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
                <small class="flex-grow-1"><%= bookmark.comment %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
